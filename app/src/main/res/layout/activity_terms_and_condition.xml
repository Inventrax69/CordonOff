<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    tools:context=".TermsAndConditionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="App Permissions"
            android:textStyle="normal"
            android:textSize="@dimen/_16sdp"
            android:padding="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:background="@drawable/band_active_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="Terms of Service and Privacy"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="We understand the nature and sensitivity of this topic and have taken storng measures to ensure that your data is not compromised "
            android:textStyle="normal"
            android:textSize="@dimen/_11sdp"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="Device Location"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="It is recommended that you set your location sharing to 'Always'. You can change this any time later\n"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="NFC"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Monitors your NFC enabled wirst band proximity to your moblie device. It is recommended that you keep it on at all time \n"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="Data Sharing"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Your Data will be shared only with Government of India.The App does not allow your name and number to be disclosd to the public at large at any time."
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="If you would like to contribute to a safer India please indicate your acceptance of the Terms of service and the Privacy Policy by clicking on the button below:"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/btnAgree"
        android:text="     I Agree     "
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:background="@drawable/ok_button1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>