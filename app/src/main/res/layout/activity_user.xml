<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:background="#4A72FC"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtData"
                    android:textSize="@dimen/_16sdp"
                    android:padding="@dimen/_2sdp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fText"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearDialog"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtUserName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_1sdp"
                                android:text="Anil"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtPhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_1sdp"
                                android:text="Phone Number"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblRegDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Register Date "
                                android:layout_gravity="right|end"
                                android:gravity="right|end"
                                android:padding="@dimen/_1sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal"/>

                            <TextView
                                android:id="@+id/txtRegDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|end"
                                android:gravity="right|end"
                                android:textColor="@color/white"
                                android:padding="@dimen/_2sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>










                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp" />

                <!--
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_image"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_gravity="center"
                                android:src="@drawable/person"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />
                -->



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="@dimen/_2sdp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/scanQrCode"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_10sdp"
                        android:background="@android:color/white"
                        android:drawableTop="@drawable/ic_qr_code1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="QR SCAN" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cartviewNFCScan"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/scanNFCTag"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_10sdp"
                        android:drawableTop="@drawable/ic_nfc_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:text="NFC SCAN" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_stroke"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/lblCDaysPending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confiment Days pending : "
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCDaysPending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="#4A72FC"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_4sdp"
                        android:background="@drawable/band_bg"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="  Band  "
                            android:padding="@dimen/_3sdp"
                            android:textStyle="normal"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/btnBand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:clickable="false"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:text="  Active  "
                            android:background="@drawable/band_active_1"
                            android:textStyle="normal"
                            android:textColor="@color/white" />


                    </LinearLayout>

                </LinearLayout>


            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_minus40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:gravity="start|center_vertical"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_run_circle_24px"
                        android:textColor="@color/black"
                        android:text="  Quarantine Range" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvQuarentineRange"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:text="50 Meters" />

                        <TextView
                            android:id="@+id/btnlocation"
                            android:layout_margin="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:text="(In Home)" />


                    </LinearLayout>




                </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:id="@+id/lblViolationsRecorded"
                        android:drawableLeft="@drawable/ic_run_circle"
                        android:gravity="start|center_vertical"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="  Vialotion" />

                    <TextView
                        android:id="@+id/txtViolationsRecorded"
                        android:layout_margin="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:text="50" />


                </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardUseCompatPadding="true"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/lblMyLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Location: " />

                        <TextView
                            android:id="@+id/txtMyLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/lblLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lat : " />

                        <TextView
                            android:id="@+id/txtLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:text="" />

                        <TextView
                            android:id="@+id/lblLong"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Long : " />

                        <TextView
                            android:id="@+id/txtLong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:text="" />


                    </LinearLayout>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <fragment
                android:name="com.google.android.gms.maps.MapFragment"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"/>

            <Button
                android:id="@+id/setLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/white"
                android:background="#4A72FC"
                android:text="Set Location" />


            <LinearLayout
                android:layout_gravity="bottom|start"
                android:weightSum="2"
                android:padding="@dimen/_3sdp"
                android:background="@android:color/holo_green_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lblLastUpdate"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Last Update  " />

                <TextView
                    android:id="@+id/txtLastUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>